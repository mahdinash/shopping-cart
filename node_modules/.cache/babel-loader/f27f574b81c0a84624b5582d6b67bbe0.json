AA;AACA,QAAA,GAAA,IAAA,KAAA,IAAA,CAAA,QAAA,CAAA,CAAA,CAAA,CAAA,KAAA,EAAA,QAAA,CAAA,CAAA,CAAA,CAAA,QAAA,IAAA,QAAA,CAAA,CAAA,CAAA,CAAA,KAAA;AACA;;AACA,aAAA,GAAA;AACA;AARA,GAhBA;AA0BA,EAAA,OAAA,EAAA;AACA,IAAA,UAAA,EAAA,sBAAA;AACA,WAAA,QAAA,CAAA,IAAA,CAAA;AACA,QAAA,IAAA,EAAA,IADA;AAEA,QAAA,KAAA,EAAA,CAFA;AAGA,QAAA,QAAA,EAAA,CAHA;AAIA,QAAA,KAAA,EAAA;AAJA,OAAA;AAMA,KARA;AASA,IAAA,aAAA,EAAA,uBAAA,KAAA,EAAA;AACA,WAAA,QAAA,CAAA,MAAA,CAAA,KAAA,EAAA,CAAA;AACA,KAXA;AAYA,IAAA,IAAA,EAAA,cAAA,KAAA,EAAA,QAAA,EAAA;AACA,aAAA,KAAA,GAAA,KAAA,IAAA,QAAA,GAAA,GAAA,CAAA;AACA;AAdA;AA1BA,CAAA","sourcesContent":["<template>\r\n    <div>\r\n        <div class=\"text-left\">\r\n            <button type=\"button\" class=\"btn btn-primary btn-sm\" @click=\"newProduct\"> + مورد جدید </button>\r\n        </div>\r\n\r\n        <form>\r\n\r\n            <div v-for=\"p,i in products\" class=\"row my-2\">\r\n                <div class=\"col-md-4\">\r\n                    <label for=\"product\"> نام محصول </label>\r\n                    <input type=\"text\" class=\"form-control\" id=\"product\" v-model=\"p.name\">\r\n                </div>\r\n\r\n                <div class=\"col-md-3\">\r\n                    <label for=\"price\"> قیمت </label>\r\n                    <input type=\"number\" class=\"form-control\" id=\"price\" v-model=\"p.price\">\r\n                </div>\r\n\r\n                <div class=\"col-md-2\">\r\n                    <label for=\"discount\"> درصد تخفیف </label>\r\n                    <input type=\"number\" class=\"form-control\" id=\"discount\" v-model=\"p.discount\">\r\n                </div>\r\n\r\n                <div class=\"col-md-2\">\r\n                    <label for=\"count\"> تعداد </label>\r\n                    <input type=\"number\" class=\"form-control\" id=\"count\" v-model=\"p.count\">\r\n                </div>\r\n\r\n                <div class=\"col-md-1 align-self-center\">\r\n                    <button type=\"button\" class=\"btn btn-danger btn-sm\" @click=\"removeProduct(i)\"> حذف </button>\r\n                </div>\r\n            </div>\r\n\r\n        </form>\r\n        <table class=\"table table-bordered mt-4\">\r\n            <thead>\r\n                <tr>\r\n                    <th> # </th>\r\n                    <th> محصول </th>\r\n                    <th> قیمت اولیه </th>\r\n                    <th> قیمت با تخفیف </th>\r\n                    <th> قابل پرداخت </th>\r\n                </tr>\r\n            </thead>\r\n            <tbody>\r\n                <tr v-for=\"p,i in products\">\r\n                    <td> {{i+1}} </td>\r\n                    <td> {{p.name}} </td>\r\n                    <td> {{p.price | toman}} </td>\r\n                    <td> {{cost(p.price, p.discount) | toman}} </td>\r\n                    <td> {{cost(p.price, p.discount) * p.count | toman}} </td>\r\n                </tr>\r\n                <tr>\r\n                    <td align=\"center\" colspan=\"3\"> قابل پرداخت نهایی </td>\r\n                    <td align=\"center\" colspan=\"2\"> {{totalPayable | toman}} </td>\r\n                </tr>\r\n            </tbody>\r\n        </table>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n    data() {\r\n        return {\r\n            products : [{\r\n                name : null,\r\n                price : 0,\r\n                discount : 0,\r\n                count : 1,\r\n            }]\r\n        }\r\n    },\r\n    filters : {\r\n        toman : function (value) {\r\n            return value ? value.toString().replace(/\\B(?=(\\d{3})+(?!\\d))/g, \",\") + ' تومان' : 0;\r\n        }\r\n    },\r\n    computed : {\r\n        totalPayable : function () {\r\n            let products = this.products;\r\n            let sum = 0;\r\n            for (var i = 0; i < products.length; i++) {\r\n                sum += this.cost(products[i].price, products[i].discount) * products[i].count;\r\n            }\r\n            return sum;\r\n        }\r\n    },\r\n    methods : {\r\n        newProduct : function () {\r\n            this.products.push({\r\n                name : null,\r\n                price : 0,\r\n                discount : 0,\r\n                count : 1,\r\n            });\r\n        },\r\n        removeProduct : function (index) {\r\n            this.products.splice(index, 1);\r\n        },\r\n        cost : function (price, discount) {\r\n            return price - (price * (discount/100) );\r\n        }\r\n    }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n</style>\r\n"],"sourceRoot":"src/components"}]}